{
  "compilerOptions": {
    "module": "NodeNext",
    "declaration": true,
    "declarationMap": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "target": "ES2021",
    "sourceMap": true,
    "inlineSources": true,
    "outDir": "./dist",
    "baseUrl": "./",
    "rootDir": "./",
    "incremental": true,
    "skipLibCheck": true,
    "strictNullChecks": true,
    "forceConsistentCasingInFileNames": true,
    "noImplicitAny": false,
    "strictBindCallApply": false,
    "esModuleInterop": true,
    "noFallthroughCasesInSwitch": false
  },
  "include": [
    "src/**/*",
    "tests/**/*",
    "playground/**/*"
  ],
  "exclude": [
    "node_modules",
    "dist"
  ]
}